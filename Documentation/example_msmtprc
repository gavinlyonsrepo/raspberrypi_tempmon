# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gmail
account        gmail
host           smtp.gmail.com
port           587
from           your_gmail_user_name.com
user           your_gmail_user_name.com
# Your 16 character API password from google gmail.
password       aaaa bbbb cccc dddd

# A freemail service
account        freemail
host           smtp.freemail.example
from           joe_smith@freemail.example


# Set a default account
account default : gmail
